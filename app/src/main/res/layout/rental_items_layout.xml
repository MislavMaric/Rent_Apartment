<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rental_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rental name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/rental_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/rental_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/rental_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rental_image"
            android:text="Rental price"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="17dp"

            />

        <TextView
            android:id="@+id/rental_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rental_price"
            android:text="Click for rental description"
            android:textAlignment="center"
            android:textSize="15dp"

            />

    </RelativeLayout>



</androidx.cardview.widget.CardView>
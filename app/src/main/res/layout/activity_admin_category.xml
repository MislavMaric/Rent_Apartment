<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add new rental"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/slogan_category"
        >
        
        
        <Button
            android:id="@+id/apartment_btn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="Apartment"
            android:layout_marginRight="50dp"
            />

        <Button
            android:id="@+id/house_btn"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="House"
            />


        

    </LinearLayout>



</RelativeLayout>